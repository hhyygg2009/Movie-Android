<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#c0000000"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/movie_pic"
                        android:layout_width="120dp"
                        android:layout_height="160dp"
                        android:padding="10dp"
                        app:srcCompat="@mipmap/ic_launcher" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/moive_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/movie_name"
                            android:textSize="36sp"
                            android:textColor="#fff" />

                        <TextView
                            android:id="@+id/movie_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/movie_score"
                            android:textColor="#fff"
                            android:textSize="20sp" />


                        <TextView
                            android:id="@+id/movie_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/movie_category"
                            android:textColor="#fff" />

                        <TextView
                            android:id="@+id/movie_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/regionduring"
                            android:textColor="#fff" />

                        <TextView
                            android:id="@+id/movie_releasetime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/release"
                            android:textColor="#fff" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/btn_want"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@android:drawable/ic_dialog_info"
                        android:drawableLeft="@android:drawable/ic_dialog_info"
                        android:text="想看" />

                    <Button
                        android:id="@+id/btn_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@android:drawable/btn_star_big_off"
                        android:drawableLeft="@android:drawable/btn_star_big_off"
                        android:text="评分" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/line"
                    android:drawableStart="@android:drawable/ic_menu_mylocation"
                    android:drawableLeft="@android:drawable/ic_menu_mylocation"
                    android:text="有一个彩蛋，在片尾字幕出现" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/line"
                    android:drawableStart="@android:drawable/ic_media_play"
                    android:drawableLeft="@android:drawable/ic_media_play"
                    android:text="可在线播放" />
            </LinearLayout>

            <TextView
                android:id="@+id/movie_story"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:background="@drawable/line"
                android:text="@string/movie_story" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/line"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_actor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="演职人员" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:srcCompat="@android:drawable/sym_def_app_icon" />

                            <TextView
                                android:id="@+id/textView28"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="演员1" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>